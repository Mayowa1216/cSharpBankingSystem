@model OnlineBankingSystem.Core.ViewModel.ForgotPasswordViewModel

@using OnlineBankingSystem.Core.Infrastructure.HtmlHelpers

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Login.cshtml";
}

@if (ViewBag.reset != null)
{
    <script type="application/json">
         var opo = '@ViewBag.reset';
         alert(opo);
    </script>
   
}

<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/Content/images/signin-image.jpg" alt="sing up image"></figure>
            </div>

            <div class="signin-form">
                <h3 class="form-title form-bold">Forgot password</h3>
                @using (Html.BeginForm("ForgotPassword", "Customer", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="email"><i class="zmdi zmdi-account zmdi-account-box-mail"></i></label>
                        @Html.TextBoxFor(x => x.Email, new { @placeholder = "Your Email" })
                    </div>

                    <div class="form-group">
                        @Html.GoogleCaptcha()
                        @Html.InvalidGoogleCaptchaLabel("Captcha is not valid !")
                    </div>

                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Enter" />
                    </div>
                }
            </div>
        </div>
    </div>
</section>